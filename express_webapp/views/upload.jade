//- Page permettant l'upload de ses s√©ances de sport
extends layout

block content
    .page-content
        include header_connect
        .container
            h2 Upload
            //- Upload des seances
            form(action='upload' method='post' enctype='multipart/form-data')
                .upload-btn-wrapper
                    input#file(accept='.json, application/json' name='file' required='' type='file')
                input.button(type='submit' value='Submit')
        //- Notification
        -if (error)
            div.error.red#hideDiv Activity cannot be imported. JSON file must be errored.